<h1>Listing connections</h1>

<table class="table table-condensed table-striped">
  <tr>
    <th>Remotesite</th>
    <th>Localname</th>
    <th>Remotename</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @connections.each do |connection| %>
  <tr>
    <td><%= connection.remoteSite %></td>
    <td><%= connection.localName %></td>
    <td><%= connection.remoteName %></td>
    <td><%= link_to 'Show', connection %></td>
    <td><%= link_to 'Edit', edit_connection_path(connection) %></td>
    <td><%= link_to 'Destroy', connection, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

